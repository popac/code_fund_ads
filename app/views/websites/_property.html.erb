<%= render CardComponent.new do %>
  <%= link_to image_tag(property.screenshot.attached? ? property.screenshot : asset_pack_path("media/images/placeholders/missing-screenshot.jpg"), class: "img-fluid"), property.url %>
  <%= render Card::BodyComponent.new do %>
    <div class="my-3 mb-4 text-center">
      <h3 class="h6 mb-1"><%= property.name %></h3>
      <p class="font-size-1 px-5"><%= link_to truncate(property.url, length: 30), property.url, class: "text-link" %></p>
    </div>
  <% end %>
<% end %>
